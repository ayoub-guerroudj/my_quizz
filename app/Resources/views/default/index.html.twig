{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
    <div id="container">
        
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    #wrapper { background: #FFF; margin: 2em auto; max-width: 1000px; width: 95%; }
    #container { background: #f8f9fa; padding: 1em; text-align: justify; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; padding}
        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
